            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Frame x:Name="articleList" Grid.Column="0">
            
        </Frame>

        <Frame Margin="10 0" x:Name="articlePage" Grid.Column="1">
            
        </Frame>
        </Grid>

    </Grid>
</Page>
