                    </Button>



                </ContextMenu>

            </GroupBox.ContextMenu>
            <ScrollViewer VerticalScrollBarVisibility="Auto" x:Name="sg1">
                <StackPanel>
                    <TextBlock Text="{Binding Naglowek}" Style="{DynamicResource Naglowek}"/>
                    <TextBlock Text="{Binding Data}" Style="{DynamicResource akapit}"/>
                    <TextBlock Text="{Binding Tresc}" Style="{DynamicResource akapit}"/>

                </StackPanel >

            </ScrollViewer>
        </GroupBox>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <GroupBox  Grid.Column="0" Style="{DynamicResource GroupBoxStyle1}" Margin="10,0,5,10">
