                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Style="{DynamicResource h2}" Text="GPT" Grid.Row="0"/>

                    <ListBox  ItemsSource="{Binding gpt}" Grid.Row="1"/>

                </Grid>
            </GroupBox>

            <GroupBox  Grid.Column="1" Style="{DynamicResource GroupBoxStyle1}" Margin="10,0,10,10">
